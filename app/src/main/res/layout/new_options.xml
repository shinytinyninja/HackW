<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="64dp"
            android:layout_margin="16dp"
            android:elevation="16dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="72dp"
                android:text="Engineer"
                android:onClick="engineer_clicked">
            </Button>
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="64dp"
        android:layout_margin="16dp"
        android:elevation="16dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="72dp"
            android:text="Art Student"
            android:onClick="art_student_clicked">
        </Button>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="64dp"
        android:layout_margin="16dp"
        android:elevation="16dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="72dp"
            android:text="Medical Science"
            android:onClick="med_sci_clicked">
        </Button>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="64dp"
        android:layout_margin="16dp"
        android:elevation="16dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="72dp"
            android:text="Computer Science"
            android:onClick="computer_clicked">
        </Button>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="64dp"
        android:layout_margin="16dp"
        android:elevation="16dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="72dp"
            android:text="Political Science"
            android:onClick="poli_sci_clicked">
        </Button>
    </androidx.cardview.widget.CardView>
</LinearLayout>